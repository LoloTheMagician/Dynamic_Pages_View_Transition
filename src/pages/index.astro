---
import { db, Product } from "astro:db";
import Layout from "./../layouts/Layout.astro";
import Card from "../components/Product.astro";
const products = await db.select().from(Product);
---

<Layout>
	<body>
		<header class="main_header">
			<header class="title">
				<h1 transition:name="Binary">Binary</h1>
				<h2>New Brand</h2>
			</header>
			<article class="sub">
				<p>
					Lorem ipsum dolor sit, amet consectetur adipisicing elit.
					Libero reprehenderit nulla minima natus voluptatem fugit, ea
					atque non aspernatur rerum!
				</p>
			</article>
		</header>
		<main>
			{
				products &&
					products.map(({ name, price }) => (
						<Card name={name} price={price} />
					))
			}
		</main>
	</body>
</Layout>

<style>
	body {
		height: 100dvh;
		display: grid;
		grid-template-rows: repeat(12, 1fr);
	}
	main {
		display: flex;
		flex-direction: column;
		grid-row: 6/13;
	}
	.main_header {
		grid-row: 1/6;
		display: grid;
		grid-template-columns: repeat(12, 1fr);
		grid-template-rows: 10px 20px 1fr;
	}
	.sub {
		grid-column: 10/13;
		grid-row: 3/4;
		display: flex;
		align-items: end;
		text-align: end;
		padding-inline-end: 1rem;
		padding-bottom: 1rem;
	}
	.title {
		grid-column: 1/8;
		grid-row: 1/4;
		padding: 1rem;
		display: grid;
		grid-template-columns: repeat(6, 1fr);
		grid-template-rows: 1fr 1fr 1fr;
	}
	.title h1 {
		grid-column: 1/7;
	}
	.title h2 {
		text-align: center;
		font-style: oblique;
		grid-row: 2/3;
		grid-column: 3/5;
	}
</style>
